<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Ligue de la Tenaille - Entrez a vos risques et périls{% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
            <link href="{{ asset('css/rjbloodbowl.css') }}" rel="stylesheet"/>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('homepage') }}">
                <img src="{{asset('public/Ligue_tenaille1.png') }}" width="30" height="30" class="d-inline-block align-top" alt=""/>
                Ligue de la Tenaille
                <img src="{{asset('public/Ligue_tenaille2.png') }}" width="30" height="30" class="d-inline-block align-top" alt=""/>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                <!--li class="nav-item">                    
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li-->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Ligue
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('affichageSaison', {action: 'view'}) }}">Consulter le tableau des matchs</a>
                        <a class="dropdown-item" href="{{ path('affichageSaison', {action: 'input'}) }}">Enregistrer un match</a>
                        <a class="dropdown-item" href="{{ path('classementSaison') }}">Classement de la saison</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('inscription') }}">Inscription aux saisons</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a id="adminMenu" class="nav-link dropdown-toggle disabled" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Admin
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('newCycle') }}">Créer un nouveau cycle</a>
                        <a class="dropdown-item" href="{{ path('newSaison') }}">Créer une nouvelle saison</a>
                        <a class="dropdown-item" href="{{ path('newCoach') }}">Ajouter un nouveau coach</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('tirage') }}">Faire un tirage au sort</a>
                    </div>
                </li>
                <!--li class="nav-item">
                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                </li-->
                </ul>
                <button id="adminButton" class="btn btn-sm btn-outline-secondary" type="submit">Admin Mode</button>
            </div>
        </nav>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class='bodyBlock'>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
            <script src="{{ asset('js/rjbloodbowl.js')}}"></script>
        {% endblock %}
    </body>
</html>
